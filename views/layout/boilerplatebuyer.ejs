         .alert {
  position: relative;
  padding: 1rem 1.25rem;
  margin-top: 0.5rem;
  margin-bottom: 1rem;
  border-radius: 0.375rem; /* ~6px */
  width: 50%;
  margin-left: auto;
  margin-right: auto;
  box-sizing: border-box;
  font-family: Arial, sans-serif;
}

.alert-success {
  background-color: green;
  color: white;
  border: 1px solid #c3e6cb;
}

.alert-danger {
  background-color: rgba(255, 0, 0, 0.784);
  color: white;
  border: 1px solid #f5c6cb;
}

/* Close button styling similar to Bootstrap's btn-close */
.btn-close {
  position: absolute;
  top: 0.25rem;
  right: 0.5rem;
  width: 1rem;
  height: 1rem;
  background: transparent;
  border: none;
  cursor: pointer;
  font-size: 1.25rem;
  line-height: 1;
  color: inherit;
  opacity: 0.5;
  transition: opacity 0.15s ease-in-out;
}

.btn-close:hover {
  opacity: 1;
}

.btn-close::before {
  content: "Ã—";  /* Unicode multiplication sign as close icon */
  display: inline-block;
  font-weight: bold;
  line-height: 1;
}
