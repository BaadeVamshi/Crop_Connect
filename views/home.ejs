<% if(success && success.length){ %>
  <div class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-2" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if(error && error.length){ %>
  <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-2" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>CropConnect | Welcome</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
  <style>
      .alert {
  position: relative;
  padding: 1rem 1.25rem;
  margin-top: 0.5rem;
  margin-bottom: 1rem;
  border-radius: 0.375rem; /* ~6px */
  width: 50%;
  margin-left: auto;
  margin-right: auto;
  box-sizing: border-box;
  font-family: Arial, sans-serif;
}

.alert-success {
  background-color: green;
  color: white;
  border: 1px solid #c3e6cb;
}

.alert-danger {
  background-color: rgba(255, 0, 0, 0.784);
  color: white;
  border: 1px solid #f5c6cb;
}

/* Close button styling similar to Bootstrap's btn-close */
.btn-close {
  position: absolute;
  top: 0.25rem;
  right: 0.5rem;
  width: 1rem;
  height: 1rem;
  background: transparent;
  border: none;
  cursor: pointer;
  font-size: 1.25rem;
  line-height: 1;
  color: inherit;
  opacity: 0.5;
  transition: opacity 0.15s ease-in-out;
}

.btn-close:hover {
  opacity: 1;
}

.btn-close::before {
  content: "Ã—";  /* Unicode multiplication sign as close icon */
  display: inline-block;
  font-weight: bold;
  line-height: 1;
}
    body {
      margin: 0;
      padding: 0;
      height: 100vh;
      background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)),
                  url('/images/Chat.png') no-repeat center center fixed;
      background-size: cover;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      animation: fadeIn 2s ease-in;
      text-align: center;
      color: white;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: scale(0.98); }
      to { opacity: 1; transform: scale(1); }
    }

    .login-wrapper {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      margin-top: 30px;
    }

    .login-card {
      backdrop-filter: blur(12px);
      background-color: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 20px;
      padding: 30px;
      margin: 15px;
      color: white;
      width: 260px;
      text-align: center;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.37);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .login-card:hover {
      transform: scale(1.05);
      box-shadow: 0 10px 40px rgba(255, 255, 255, 0.2);
    }

    .login-card img {
      width: 64px;
      height: 64px;
      margin-bottom: 20px;
    }

    .btn-login {
      margin-top: 15px;
      border-radius: 30px;
      padding: 8px 20px;
    }
  </style>
</head>
