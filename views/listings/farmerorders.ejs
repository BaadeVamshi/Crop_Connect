<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Farmer Dashboard - Accepted Orders</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: green;
    }

    h4 {
      color: #2e5283;
    }

    /* Fade-in animation */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .order-box {
      max-width: 800px;
      margin: 20px auto;
      margin-top: 3.5rem;
      background: linear-gradient(135deg, #e6f2e6, #c7dfca);
      border-radius: 12px;
      padding: 25px 30px;
      box-shadow: 0 6px 12px rgba(46, 132, 95, 0.25);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      transition: box-shadow 0.3s ease;
      animation: fadeInUp 0.6s ease forwards;
    }

    .order-box:hover {
      box-shadow: 0 10px 20px rgba(46, 132, 95, 0.4);
    }

    .order-box h4 {
      color: #2e5283;
      font-weight: 700;
      margin-bottom: 15px;
      font-size: 1.25rem;
      letter-spacing: 0.03em;
      font-family: 'Segoe UI Semibold', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Table styles */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
      font-size: 1.1rem;
      font-weight: 600;
      color: #2c3e50;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      table-layout: fixed;
    }

    th, td {
      padding: 12px 15px;
      text-align: left;
      border-bottom: 2px solid #a8d5ba;
      word-wrap: break-word;
    }

    th {
      background-color: #2e5283;
      color: white;
      font-weight: 700;
    }

    tr:hover td {
      background-color: #d0e8d6;
      color: #2e7d32;
      cursor: default;
      font-weight: 700;
      transition: background-color 0.3s ease;
    }

    .no-orders {
      text-align: center;
      color: #aaa;
      margin-top: 50px;
    }
  </style>
</head>
<% layout("/layout/boilerplate") %>
<body>
  <h1>Purchase history from Buyers</h1>

  <% if (orders.length === 0) { %>
    <p class="no-orders">No accepted orders yet.</p>
  <% } else { %>
    <% orders.forEach(order => { %>
      <div class="order-box">
          <h4>Buyer: <%= order.buyer.username %></h4>
          <h4>Farmer: <%= farmername %></h4>
          <h4>Time: <%= order.createdAt %></h4>

        <table>
          <thead>
            <tr>
              <th>Crop</th>
              <th>Quantity (kgs)</th>
              <th>Price (â‚¹/kg)</th>
            </tr>
          </thead>
          <tbody>
            <% order.inventoryaccepted.forEach(item => { %>
              <tr>
                <td><%= item.crop %></td>
                <td><%= item.quantity %></td>
                <td><%= item.price %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% }) %>
  <% } %>
</body>
</html>
